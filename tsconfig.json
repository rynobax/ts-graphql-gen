{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "build",
    "noFallthroughCasesInSwitch": true,
    "lib": ["ES2015"],
    "target": "ES2015",
    "rootDir": "src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true
  },
  "include": ["src"]
}
